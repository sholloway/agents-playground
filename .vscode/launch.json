  "version": "0.2.0",
  "configurations": [
    {
      "name": "Just my Code",
      "type": "python",
      "request": "launch",
      "module": "agents_playground",
      "justMyCode": true,
      "pythonArgs": [
        "-Xdev"
      ],
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1"
      }
    },
    {
      "name": "agents_playground",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "agents_playground",
      "args": [],
      "pythonArgs": [
        "-Xfrozen_modules=off"
      ]
    },
    {
      "name": "Playground w/ Sim",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "agents_playground",
      "args": ["--sim", "demo/landscape_spike"],
      "pythonArgs": [
        "-Xfrozen_modules=off"
      ]
    },
    {
      "name": "Debug Unit Test",
      "type": "python",
      "request": "test",
      "justMyCode": false,
    },
    {
      "name": "Debug WebGPU POC",
      "type": "python",
      "request": "launch",
      "module": "pyside_webgpu",
      "justMyCode": true,
      "pythonArgs": [
        "-Xdev"
      ],
      "args": [
        "--poc",
        "wx_triangle"
      ],
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1"
      }
    },
    {
      "name": "Debug Obj POC",
      "type": "python",
      "request": "launch",
      "program": "poc/pyside_webgpu/pyside_webgpu/demos/obj/app.py",
      "justMyCode": true,
      "pythonArgs": [
        "-Xdev"
      ],
      "args": [],
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1"
      },
      "console": "integratedTerminal",
    }
  ]
}